@using Microsoft.AspNetCore.Identity
@using SecondFamilies.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            @*<li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">@UserManager.GetUserName(User)!</a>
            </li>*@
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">@UserManager.GetUserName(User)<span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">My Account</a></li>
                    <li><a asp-area="" asp-controller="Manage" asp-action="MyDonations" title="Manage">My Donations</a></li>
                    @*<li><a href="#">Logout</a></li>*@
                </ul>
            </li>  
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
